DESCRIPTION
    Eulerian Video Magnification for colors and motions magnification

    level: 6
        - alpha: 30
        - lambda cutoff: 16
        - attenuation: 0.1
        - mode: laplacian
        - low omega: 0.4
        - high omega: 3

python3 src/evm.py  -v=emre-backside-close-60fps-hd.MOV -a=50 -s=emre-backside-close-60fps-hd-amp-paper.MOV -m=laplacian --lambda_cutoff=16 --low_omega=20 --high_omega=28


python3 src/evm.py  -v=emre-backside-close-60fps-hd.MOV -a=30 -s=emre-backside-close-60fps-hd-amp2.MOV -m=laplacian --lambda_cutoff=16 --low_omega=0.4 --high_omega=3
python3 src/evm.py  -v=emre-backside-close-60fps-hd.MOV -a=20 -s=emre-backside-close-60fps-hd-amp3.MOV -m=laplacian --lambda_cutoff=16 --low_omega=0.4 --high_omega=3
python3 src/evm.py  -v=emre-backside-close-60fps-hd.MOV -a=20 -s=emre-backside-close-60fps-hd-amp4.MOV -m=laplacian --lambda_cutoff=16 --low_omega=0.4 --high_omega=2

python3 src/evm.py  -v=emre-backside-close-60fps-hd.MOV -a=20 -s=emre-backside-close-60fps-hd-amp-paper.MOV -m=laplacian --lambda_cutoff=16 --low_omega=20 --high_omega=28

